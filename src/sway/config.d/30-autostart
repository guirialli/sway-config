exec --no-startup-id xdg-desktop-portal-wlr & 

# (2) Portal GTK (fornece a interface grafica de selecao)
exec --no-startup-id xdg-desktop-portal-gtk & 

# (3) Portal Principal (deve ser o ultimo a ser iniciado)
exec --no-startup-id xdg-desktop-portal &

exec ulauncher
